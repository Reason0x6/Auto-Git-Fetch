{
  "name": "scriptrunner",
  "displayName": "ScriptRunner",
  "description": "Run a git fetch on a selected folder every X seconds from vs code",
  "version": "0.0.1",
  "publisher": "R3ason6",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Auto Git Fetch Settings",
      "properties": {
        "autoGitFetch.folderPath": {
          "type": "string",
          "default": "",
          "description": "The folder path where git fetch will be executed.",
          "scope": "window"
        },
        "autoGitFetch.interval": {
          "type": "number",
          "default": 600,
          "description": "Interval in seconds for running git fetch."
        }
      }
    },
    "commands": [
      {
        "command": "extension.runGitFetchNow",
        "title": "Run Git Fetch Now"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}